@page "/Tranferencia"
@inherits TranferenciasBase

<PageTitle>Retiro</PageTitle>
 



<body>

    

    <header>
    <img src="LogoBankDavno.PNG" alt="Logo">
    <button id="header-button">Página Inicial</button>
    </header>


    <div class="titulo">
        <h2>Regístrate</h2>
    </div>



    <EditForm Model="@movimiento" OnValidSubmit="Register">
        <DataAnnotationsValidator />
        <article>
        
            <div class="form-group">
                <label>Número de Deposito: </label>
                <InputNumber class="from-control" @bind-Value="movimiento.IDMovimiento" />
            </div>

            <div class="form-group">
                <label>Numero de cuenta Debitada: </label>
                <InputNumber @bind-Value="movimiento.IDCuentaDebitada" />
                <ValidationMessage For="@(() => movimiento.IDCuentaDebitada)" />
            </div>

            <div class="form-group">
                <label>Monto a Depositar: </label>
                <InputNumber @bind-Value="movimiento.Monto" />
                <ValidationMessage For="@(() => movimiento.Monto)" />
            </div>

            <div class="form-group">
                <label>Cuenta destino: </label>
                <InputNumber @bind-Value="movimiento.IDCuentaAcreditada" />
                <ValidationMessage For="@(() => movimiento.IDCuentaAcreditada)" />
            </div>
            

           

            <div div="formcenter">
                <input type="submit" value="Tranferir" />
            </div>
            
        </article>

        <ValidationSummary />
    </EditForm>

  
<footer>
    <p> Derechos protegidos por Bank DavNo C.A., Banco Universal</p> 
</footer>


</body>
